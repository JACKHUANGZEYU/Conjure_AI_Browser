<Application x:Class="ConjureBrowser.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Core -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="LightBlue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                
                <!-- Custom Chrome-like styles -->
                <ResourceDictionary Source="Themes/ChromeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Chrome-like color palette -->
            <SolidColorBrush x:Key="ChromeBackground" Color="#202124" />
            <SolidColorBrush x:Key="ChromeToolbar" Color="#35363A" />
            <SolidColorBrush x:Key="ChromeTabBackground" Color="#202124" />
            <SolidColorBrush x:Key="ChromeTabActive" Color="#35363A" />
            <SolidColorBrush x:Key="ChromeTabHover" Color="#3C4043" />
            <SolidColorBrush x:Key="ChromeText" Color="#E8EAED" />
            <SolidColorBrush x:Key="ChromeTextSecondary" Color="#9AA0A6" />
            <SolidColorBrush x:Key="ChromeAccent" Color="#8AB4F8" />
            <SolidColorBrush x:Key="ChromeBorder" Color="#5F6368" />
            <SolidColorBrush x:Key="ChromeButtonHover" Color="#4E5256" />
            <SolidColorBrush x:Key="ChromeCloseHover" Color="#EA4335" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
